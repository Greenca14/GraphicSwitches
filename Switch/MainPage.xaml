<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Switch"
             x:Class="Switch.MainPage">

    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="100">
        
        <VerticalStackLayout>
            <local:RotarySwitch HeightRequest="200" WidthRequest="200" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <local:TouchSwitch HeightRequest="200" WidthRequest="200" />
        </VerticalStackLayout>
        
    </HorizontalStackLayout>
</ContentPage>
